<div class="home">
    <p class="is-size-2 home-title">Today<span class="is-size-6"> Mon 31 Jan</span></p>
    <button class="button is-warning home-add-todo js-modal-trigger" data-target="modal-add-todo">
        <p class="is-size-4">+ Todo</p>
    </button>
</div>

{{#each todos}}
<div class="box">
    <div class="todo-item">
        <p class="is-size-4 todo-title">{{this.title}}</p>
        <p class="is-size-7 todo-description">{{this.description}}</p>
        <button class="button is-success is-light todo-done">Done</button>
    </div>
</div>
{{/each}}

<div class="modal" id="modal-add-todo">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Add Todo!</p>
            <button class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <form action="todo/add" method="POST">
                <div class="field">
                    <label class="label">Title</label>
                    <div class="control">
                        <input class="input" placeholder="Title" name="title" required="required" maxlength="50">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Description</label>
                    <div class="control">
                        <input class="input" placeholder="Description" name="description" maxlength="100">
                    </div>
                </div>

                <button class="button is-warning width-100" id="modal-add-todo-button">Add Todo</button>
            </form>
        </section>
        
    </div>
</div>

<script type="text/javascript" src="/js/home.js"></script>